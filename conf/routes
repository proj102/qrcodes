# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)	

# Test customers inscription in db
GET		/addC						controllers.Application.addC()
GET		/testP						controllers.Application.testP()

# get URL
POST    /getUrl                     controllers.Application.getUrl()
GET	/r/:id			    controllers.Application.redirection(id: String)

# Test customers inscription in db
GET	/addC			    controllers.Application.addC()
GET	/testP			    controllers.Application.testP()


#Route to MyQrCodes
GET     /myQrTable                  controllers.Application.myQrTable()



#Route to MyQrCodes
GET     /overview                   controllers.Application.overview()



# Test adding qrcodes
GET	/addQ			    controllers.Application.addQ()


# Signup
GET     /signup                     controllers.SignUp.blank()
GET     /users/fakeuser             controllers.SignUp.edit()
POST    /signup                     controllers.SignUp.submit()


# Login
POST	/login			    controllers.Login.submit()
GET	/login			    controllers.Login.blank()
GET	/co			    controllers.Login.isConnected()

# Upload
#Route to page generating QR Codes through CSV Files
GET     /upload                    controllers.Upload.blank()
POST    /upload                     controllers.Upload.submit()



GET	/test/:key				controllers.Application.test(key: String)

