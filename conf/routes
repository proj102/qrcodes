# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Redirection and Map id with the bdd 
GET	/r/:id				controllers.Application.redirection(id: String)

# get URL
GET     /getUrl                  controllers.Application.getUrl()

GET		/r/:id						controllers.Application.redirection(id: String)

# Test insert in db
GET	/sort						controllers.Application.testsort()

# Test customers inscription in db
GET		/addC							controllers.Application.addC()
GET		/testP							controllers.Application.testP()

